<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Page Title - SB Admin</title>
        <link href="/api/public/css/styles.css" rel="stylesheet" />
        <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/js/all.min.js" crossorigin="anonymous"></script>
    </head>
    <body class="bg-white">
        <div id="layoutAuthentication">
            <div id="layoutAuthentication_content">
                <main>
                    <div class="p-4">
                        <div class="row justify-content-center">
                            <div class="col-lg-12">
                                <div class="card shadow-lg border-0 rounded-lg mt-5">
                                    <div class="card-header bg-primary"><h3 class="text-center font-weight-heavy text-white my-4">Assign Freelancer</h3></div>
                                    <div class="card-body">
                                        <% let action = "/api/support/freelancer/assign/" + projectId %>
                                        <% let remove = "/api/support/freelancer/remove/" + projectId %>
                                        <form action="<%= action %>" method="POST">
                                            <div class="form-row">
                                                <div class="col-md-12">
                                                    <div class="form-group"><label class="small mb-1" for="inputFirstName">Project Id</label><input class="form-control py-4" id="inputFirstName" value="<%= projectId %>" type="text" placeholder="Project Id here" /></div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="form-group"><label class="small mb-1">Project Name</label><h2 style="opacity: 50%;"><%= projectName %></h2></div>
                                                </div>
                                            </div>
                                     
                                            
                                                    <div class="table-responsive mt-4 mb-4">
                                                        <table class="table text-nowrap" id="dataTable" width="100%" cellspacing="0">
                                                            <thead>
                                                                <tr>
                                                                    <th>Id</th>
                                                                    <th>Name</th>
                                                                    <th>Budget</th>
                                                                    <th>Email</th>
                                                                    <th>Rating</th>
                                                                    <th>Projects</th>
                                                                    <th>Wallet</th>
                                                                    <th>Project Assigned</th>
                                                                    <th>Work Load</th>
                                                                    <th>Profiles</th>
                                                                    <th>Experience</th>
                                                                    <th>Date Joined</th>
                                                                    <th>Ranking</th>
                                                                    <th>Type</th>
                                                                    <th>Hourly Rate</th>
                                                                    <th>Work Rate</th>
                                                                    <th>Priority</th>
                                                                    <th>Accepting</th>
                                                                    <th>Action</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <% freelancers.forEach(function(freelancer){ %>
                                                                    <tr>
                                                                        <% let workLoad = freelancer.workLoad === null ? 'No Work Load' : freelancer.workLoad %>
                                                                        <% let accepting = freelancer.accepting === true ? 'Yes' : 'No' %>
                                                                        <% let emailurl = "/api/support/freelancer/sendemail/" + freelancer._id %>
                                                                        <td><%= freelancer._id %></td>
                                                                        <td><%= freelancer.name %></td>
                                                                        <td><%= freelancer.budget %></td>
                                                                        <td><%= freelancer.email %></td>
                                                                        <td><%= freelancer.rating %></td>
                                                                        <td><%= freelancer.totalProjects %></td>
                                                                        <td><%= freelancer.wallet %></td>
                                                                        <td><%= freelancer.projectAssigned %></td>
                                                                        <td><%= workLoad %></td>
                                                                        <td>
                                                                            <% freelancer.profiles.forEach(function(link){ %>
                                                                                <a href="<%= link %>"><%= link %></a>
                                                                            <% }) %>
                                                                        </td>
                                                                        <td><%= freelancer.workExperience %></td>
                                                                        <td><%= freelancer.dateJoined %></td>
                                                                        <td><%= freelancer.ranking %></td>
                                                                        <td><%= freelancer.type %></td>
                                                                        <td><%= freelancer.hourlyRate %></td>
                                                                        <td><%= freelancer.workRate %></td>
                                                                        <td><%= freelancer.priorityValue %></td>
                                                                        <td><%= accepting %></td>
                                                                        <td><a href="<%= emailurl %>"><i class="fa fa-envelope"></i></a></td>
                                                                    </tr>
                                                                <% }) %>    
                                                            </tbody>
                                                        </table>
                                                    </div>
                                              

                                            <div class="form-row mt-4">
                                                <h5>or Assign Directly without sending mail</h5>
                                            </div>    
                                            <div class="form-row">
                                                <div class="col-md-6">
                                                    <div class="form-group"><label class="small mb-1" for="inputPassword">Freelancer ID</label><input class="form-control py-4" id="id" name="id" type="text" placeholder="Enter Id here" /></div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group"><label class="small mb-1" for="inputConfirmPassword">Username</label><input class="form-control py-4" id="username" name="username" type="text" placeholder="or username here" /></div>
                                                </div>
                                            </div>
                                            <div class="form-group mt-4 mb-0 row justify-content-center mb-4"><button class="btn btn-primary" type="submit">Assign</button> &nbsp;&nbsp;&nbsp; <a class="btn font-weight-bold" href="/api/support/projects">Cancel</a></div>
                                        </form>
                                    </div>
                                    <div class="card-footer text-center">
                                        <div class="small"><a href="<%= remove %>">Remove Assigned Freelancer</a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
