<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Page Title - SB Admin</title>
        <link href="/api/public/css/styles.css" rel="stylesheet" />
        <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/js/all.min.js" crossorigin="anonymous"></script>
    </head>
    <body class="bg-white">
        <div id="layoutAuthentication">
            <div id="layoutAuthentication_content">
                <main>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-7">
                                <div class="card shadow-lg border-0 rounded-lg mt-5">
                                    <div class="card-header bg-primary"><h3 class="text-center font-weight-heavy text-white my-4">Change Status</h3></div>
                                    <div class="card-body">
                                        <% let action = "/api/support/changestatus/" + projectId %>
                                        <form action="<%= action %>" method="POST">
                                            <div class="form-row">
                                                <div class="col-md-12">
                                                    <div class="form-group"><label class="small mb-1">Project Id</label><h2 style="opacity: 50%;"><%= projectId %></h2></div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="form-group"><label class="small mb-1">Project Name</label><h2 style="opacity: 50%;"><%= projectName %></h2></div>
                                                </div>
                                            </div>
                                            
                                            <div class="form-row">
                                                <div class="col-md-12 mb-4">
                                                    <div class="form-group"><label class="small mb-1" >Current Status</label><h2 style="opacity: 50%;"><%= projectStatus %></h2></div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="form-group"><label class="small mb-2" >Change status to</label><br>
                                                        <!-- <input class="form-control py-4" id="inputConfirmPassword" type="text" placeholder="Enter new status here" /> -->
                                                        <div class="btn-group btn-block">
                                                            <select class="btn btn-secondary btn-lg dropdown-toggle" name="status" value="<%= projectStatus %>"  aria-haspopup="true">
                                                                <option value="Assigning Freelancer">Assigning Freelancer</option>
                                                                <option value="Working">Working</option>
                                                                <option value="Completed">Completed</option>
                                                                <option value="Declined">Decline</option>
                                                                <option value="Undecline">Undecline</option>
                                                            </select>
                            
                                                          </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group mt-4 mb-0 row justify-content-center mb-4"><button class="btn btn-primary" type="submit">&nbsp;&nbsp;&nbsp;Change&nbsp;&nbsp;&nbsp;</button> &nbsp;&nbsp;&nbsp; <a class="btn font-weight-bold" href="/api/support/projects">Cancel</a></div>
                                        </form>
                                    </div>
                                    <!-- <div class="card-footer text-center">
                                        <div class="small"><a href="register.html">Have an account? Go to login</a></div>
                                    </div> -->
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
