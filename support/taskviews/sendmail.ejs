<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Page Title - SB Admin</title>
        <link href="/api/public/css/styles.css" rel="stylesheet" />
        <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/js/all.min.js" crossorigin="anonymous"></script>
    </head>
    <body class="bg-white">
        <div id="layoutAuthentication">
            <div id="layoutAuthentication_content">
                <main>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-7">
                                <div class="card shadow-lg border-0 rounded-lg mt-5">
                                    <div class="card-header bg-primary"><h3 class="text-center font-weight-heavy text-white my-4">Send Mail</h3></div>
                                    <div class="card-body">
                                        <% let action = "/api/support/sendmail" %>
                                            <form action="<%= action %>" method="POST">
                                            <div class="form-row">
                                                <div class="col-md-12">
                                                    <div class="form-group"><label class="small mb-1">Mail Id</label><input class="form-control py-4" id="mailId" name="mailId" value="<%= email %>"  type="text" placeholder="Enter Email(s) here" /></div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="form-group"><label class="small mb-1" for="inputFirstName">Name</label><input class="form-control py-4" id="name" value="<%= name %>" name="name" type="text" placeholder="Enter Name here" /></div>
                                                </div>
                                                
                                            </div>
                                            
                                            <div class="form-row">
                                                <div class="col-md-12">
                                                    <div class="form-group"><label class="small mb-1" for="inputPassword">Subject</label><input class="form-control py-4" id="subject" name="subject" type="text" placeholder="Enter Subject here" /></div>
                                                </div>
                                            </div>
                                            <div class="form-row mb-4">
                                                <div class="col-md-12">
                                                    <div class="form-group"><label class="small mb-1" for="inputPassword">Body</label><textarea class="form-control" id="body" name="body" type="text" > Enter Text Here </textarea></div>
                                                </div>
                                            </div>
                                            <hr>
                                            <div class="form-row mb-2">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <h5 class="col-lg-12">Advanced</h5>
                                                    </div>    
                                                </div>
                                                
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group"><label class="small mb-1" for="inputPassword">Button Text</label><input class="form-control py-4"id="btnText" name="btnText" type="text" placeholder="Text to display on button" /></div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group"><label class="small mb-1" for="inputPassword">Button Link</label><input class="form-control py-4" id="btnLink" name="btnLink" type="text" placeholder="To redirect on click" /></div>
                                            </div>
                                            <div class="form-group mt-4 mb-0 row justify-content-center mb-4"><button class="btn btn-primary" type="submit">Send</button> &nbsp;&nbsp;&nbsp; <a class="btn font-weight-bold" href="/api/support/projects">Cancel</a></div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
